<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/verde300"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardMaxElevation="8dp"
            android:backgroundTint="@color/verde500"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_margin="12dp"
                    app:boxStrokeColor="@color/white"
                    app:hintTextColor="@color/white"
                    android:hint="Expediente, nombre mascota">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/titExpNom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:inputType="text" />

                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/btnFind"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_find"
                    android:backgroundTint="@color/crema100"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvExpediente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/crema100"
        app:cardMaxElevation="12dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expediente:" />

            <TextView
                android:id="@+id/tvIdExpediente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="ID EXPEDIENTE" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/verde300"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre mascota:" />

            <TextView
                android:id="@+id/tvNomMascota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Nombre mascota" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/verde300"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edad:" />

            <TextView
                android:id="@+id/tvEdad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="EDAD" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/verde300"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Raza:" />

            <TextView
                android:id="@+id/tvRaza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="RAZA" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/verde300"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Veterinario:" />

            <TextView
                android:id="@+id/tvNomVeterinario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="VETERINARIO" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/verde300"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sintomas:" />

            <TextView
                android:id="@+id/tvSintomas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="SINTOMAS" />

            <EditText
                android:id="@+id/etSintomas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/verde300"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tratamiento:" />

            <TextView
                android:id="@+id/tvTratamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="TRATAMIENTO" />

            <EditText
                android:id="@+id/etTratamiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/verde300"
                android:layout_gravity="bottom|center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="bottom">

                <Button
                    android:id="@+id/btnEditar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EDITAR"
                    android:backgroundTint="@color/azul100"
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="8dp"/>

                <Button
                    android:id="@+id/btnActualizar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTUALIZAR"
                    android:backgroundTint="@color/verde300"
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="8dp"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/btnLogout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/rojo100"
        android:layout_marginEnd="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/logout"
        android:layout_gravity="end|bottom" />
</LinearLayout>